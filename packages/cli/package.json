{
  "name": "@vnhtml/cli",
  "description": "A command-line application which generates HTML/CSS visual novels from a basic scripting language.",
  "version": "0.0.11",
  "license": "MIT",
  "bin": "dist/vnhtml.js",
  "files": [
    "dist/**/*.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "rimraf": "rimraf dist",
    "mkdirp": "mkdirp dist",
    "compile": "npm-run-all rimraf mkdirp compileBabel compileUglifyJs compilePkg compileZipPkg",
    "compileBabel": "babel src --out-dir dist",
    "compileUglifyJs": "babel-node uglify",
    "compilePkg": "pkg dist/vnhtml.js --output dist/vnhtml-cli --targets node8-win-x64,node8-linux-x64,node8-linux-x86,node8-macos-x64,node8-macos-x86",
    "compileZipPkg": "babel-node zipPkg",
    "watch": "npm-run-all rimraf mkdirp watchBabel",
    "watchBabel": "babel src --watch --out-dir dist",
    "example": "node dist/vnhtml.js example/main.vnh --html dist/example.html --zip dist/example.zip"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-rc.1",
    "@babel/core": "^7.0.0-rc.1",
    "@babel/node": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "pkg": "^4.3.4",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^2.6.2",
    "uglify-js": "^3.4.7"
  },
  "dependencies": {
    "archiver": "^2.1.1",
    "chokidar": "^2.0.4",
    "commander": "^2.17.1",
    "html-minifier": "^3.5.19",
    "svgo": "^1.0.5"
  }
}
